# Sentiment Analysis API Environment Variables
# Copy this file to .env and update the values

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=True

# YouTube API Configuration (REQUIRED for YouTube analysis)
# Get your API key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_DEFAULT_MAX_COMMENTS=100
YOUTUBE_REQUEST_TIMEOUT=30

# Model Configuration
DEFAULT_MODEL_TYPE=basic
MAX_FEATURES=10000
MIN_DF=2
MAX_DF=0.95

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=False

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=120

# Security Configuration
API_KEY_REQUIRED=False
MAX_REQUEST_SIZE=1048576

# Rate Limiting
RATE_LIMIT_ENABLED=False
RATE_LIMIT_PER_MINUTE=100

# Request Limits
MAX_BATCH_SIZE=100
MAX_YOUTUBE_COMMENTS=500
REQUEST_TIMEOUT=120
