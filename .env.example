# Sentiment Analysis API Configuration
# Copy this file to .env and update the values

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=False
FLASK_ENV=production

# CORS Configuration
CORS_ORIGINS=*

# =============================================================================
# YouTube API Configuration
# =============================================================================
# Get your API key from: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_DEFAULT_MAX_COMMENTS=100
YOUTUBE_REQUEST_TIMEOUT=30
YOUTUBE_REQUESTS_PER_SECOND=1.0
YOUTUBE_QUOTA_LIMIT=10000

# =============================================================================
# Model Configuration
# =============================================================================
DEFAULT_MODEL_TYPE=enhanced
AUTO_LOAD_BEST_MODEL=True
DEFAULT_DATASET_SIZE=1000
MAX_TRAINING_SIZE=10000
MAX_FEATURES=10000
MIN_DF=2
MAX_DF=0.95

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_TO_FILE=True
MAX_LOG_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# Performance Configuration
# =============================================================================
MAX_WORKERS=4
WORKER_TIMEOUT=120
PRELOAD_MODELS=True
MODEL_CACHE_SIZE=3
MAX_MEMORY_USAGE=1073741824
GC_THRESHOLD=100

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=100
MAX_BATCH_SIZE=100
MAX_YOUTUBE_COMMENTS=500
REQUEST_TIMEOUT=120

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_ENABLED=True
CACHE_TYPE=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_DEFAULT_TTL=3600
CACHE_PREDICTION_TTL=300

# =============================================================================
# Database Configuration (Optional)
# =============================================================================
DATABASE_ENABLED=False
DATABASE_URL=sqlite:///sentiment_analysis.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# Security Configuration
# =============================================================================
API_KEY_REQUIRED=False
VALID_API_KEYS=
MAX_REQUEST_SIZE=1048576
CORS_MAX_AGE=86400

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:5000

# =============================================================================
# Docker Configuration
# =============================================================================
# Grafana admin password for monitoring
GRAFANA_PASSWORD=admin

# =============================================================================
# Production Environment Variables
# =============================================================================
# Uncomment and set these for production deployment

# SSL Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# External Services
# SENTRY_DSN=https://your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Cloud Storage (for model storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-model-bucket

# Email Configuration (for alerts)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
